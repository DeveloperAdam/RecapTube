<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    tools:context="androidlab.com.recaptube.Fragments.DiscussionTabs.DiscussionDetailsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10sp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/details"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="details"/>

        <Button
            android:id="@+id/detailsfromthelastsession"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:text="details from the last session"
            android:textAllCaps="false"
            android:layout_toRightOf="@+id/details"/>


    </LinearLayout>

</FrameLayout>
