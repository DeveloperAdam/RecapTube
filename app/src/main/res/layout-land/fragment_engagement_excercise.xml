<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#eee"
    tools:context="androidlab.com.recaptube.Fragments.EngagementTabs.EngagementExcerciseFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/aguidedimageryexercise"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="a guided imagery exercise"/>

        <Button
            android:id="@+id/ameditationexercise"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:text="a meditation exercise"
            android:textAllCaps="false"
            android:layout_toRightOf="@+id/aguidedimageryexercise"/>

        <Button
            android:id="@+id/arelaxationexercise"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:text="a relaxation exercise"
            android:textAllCaps="false"
            android:layout_toRightOf="@+id/ameditationexercise"/>
    </LinearLayout>
        <Button
            android:id="@+id/adeepbreathingexercise"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:text="a deep breathing exercise"
            android:textAllCaps="false"
            android:layout_below="@+id/aguidedimageryexercise"
            android:layout_marginTop="10dp"/>




</LinearLayout>
