<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    tools:context="androidlab.com.recaptube.Fragments.InterventionFragment1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mainTextIntervention"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Who did the intervention?"
            android:layout_gravity="center"
            android:padding="10sp"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="50dp">

            <Button
                android:id="@+id/btnFacilitator"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:text="facilitator"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:gravity="center"/>


            <Button
                android:id="@+id/btnTherapist"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:text="therapist"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:gravity="center"/>

            <Button
                android:id="@+id/cfs_intervention"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:text="cfs"
                android:layout_gravity="center"
                android:gravity="center"/>

            <Button
                android:id="@+id/btnParentPartner"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:text="parent partner"
                android:layout_gravity="center"
                android:textAllCaps="false"
                android:gravity="center"/>

            <Button
                android:id="@+id/btnTeam"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:text="team"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:gravity="center"/>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>
