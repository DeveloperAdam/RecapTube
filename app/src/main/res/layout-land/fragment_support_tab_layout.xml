<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#eee"
    android:layout_gravity="center"
    android:gravity="center"
    tools:context="androidlab.com.recaptube.Fragments.SupportTabs.supportTabLayout">


    <TextView
        android:id="@+id/tvTopSup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10sp"
        android:text="The CFS and the client brainstormed what?"/>



    <android.support.design.widget.TabLayout
        android:id="@+id/tabsSup"
        android:layout_width="wrap_content"
        android:layout_height="70sp"
        android:layout_marginTop="20sp"
        app:tabPaddingStart="115sp"
        app:tabPaddingEnd="115sp"
        app:tabMaxWidth="350sp"
        app:tabMode="fixed"
        app:tabGravity="fill"
        app:tabSelectedTextColor="#000"
        app:tabIndicatorColor="@color/colorAccent"
        app:tabTextColor="#000"
        android:layout_gravity="center"
        android:foregroundGravity="center"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>


    <android.support.v4.view.ViewPager
        android:id="@+id/viewpagerSup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#eee"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"  />

</LinearLayout>
