<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#eee"
    tools:context="androidlab.com.recaptube.Fragments.StrategyTabs.strategyGoalFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/barriers"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="barriers"/>

        <Button
            android:id="@+id/benefitsandconsequences"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:text="benefits and consequences"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/ideas"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:text="ideas"
            android:textAllCaps="false" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/methods"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:text="methods"
            android:textAllCaps="false"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/prosandcons"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:text="pros and cons"
            android:textAllCaps="false"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/strategies"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:text="strategies"
            android:textAllCaps="false"
            android:layout_marginTop="10dp"/>


    </LinearLayout>


</LinearLayout>
