<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    tools:context="androidlab.com.recaptube.Fragments.DiscussionTabs.DiscussionEventTabFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10sp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/anupcomingcourtdate"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="an upcoming court date"/>

        <Button
            android:id="@+id/eventssincethelastsession"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:text="events since the last session"
            android:textAllCaps="false"/>

    </LinearLayout>

</LinearLayout>
