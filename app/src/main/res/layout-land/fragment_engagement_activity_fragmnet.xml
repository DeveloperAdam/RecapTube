<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    tools:context="androidlab.com.recaptube.Fragments.EngagementTabs.EngagementActivityFragmnet">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <Button
            android:id="@+id/astructuredactivity"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="a structured activity"/>

        <Button
            android:id="@+id/astructuredgame"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:text="a structured game"
            android:textAllCaps="false"
            android:layout_toRightOf="@+id/astructuredactivity"/>


    </LinearLayout>
</FrameLayout>
