<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#eee"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="androidlab.com.recaptube.Fragments.EngagementTabs.EngagementTablayout">

    <TextView
        android:id="@+id/tvTopEng"
        android:layout_width="match_parent"
        android:padding="10sp"
        android:layout_height="wrap_content"
        android:text="The CFS and the client brainstormed what?"/>




    <android.support.design.widget.TabLayout
        android:id="@+id/tabsEng"
        android:layout_width="wrap_content"
        android:layout_height="70sp"
        android:layout_marginTop="20sp"
        app:tabMode="fixed"
        app:tabGravity="fill"
        app:tabSelectedTextColor="#000"
        app:tabIndicatorColor="@color/colorAccent"
        app:tabTextColor="#000"
        android:layout_gravity="center"
        android:foregroundGravity="center"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>


    <android.support.v4.view.ViewPager
        android:id="@+id/viewpagerEng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#eee"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"  />
</LinearLayout>
