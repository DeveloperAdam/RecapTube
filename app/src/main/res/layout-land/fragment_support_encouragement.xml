<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#eee"
    tools:context="androidlab.com.recaptube.Fragments.SupportTabs.supportEncouragementFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/encouragement"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="encouragement"/>

        <Button
            android:id="@+id/someonetotalkto"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:text="someone to talk to"
            android:textAllCaps="false"
            android:layout_toRightOf="@+id/encouragement"/>

        <Button
            android:id="@+id/supportive_presence"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:text="supportive presence"
            android:textAllCaps="false"
            android:layout_toRightOf="@+id/someonetotalkto"/>

    </LinearLayout>


</LinearLayout>
