<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:orientation="vertical"
    tools:context="androidlab.com.recaptube.Fragments.PraiseTabs.PraiseBehaviourFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10sp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/improvingoverallbehavior"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="improving overall behavior"/>

        <Button
            android:id="@+id/smallbehaviorimprovements"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:text="small behavior improvements"
            android:textAllCaps="false"
            android:layout_toRightOf="@+id/improvingoverallbehavior"/>



    </LinearLayout>

</LinearLayout>
