<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#eee"
    tools:context="androidlab.com.recaptube.Fragments.Fragment2k3eTabs.Fragment2k3e">
    <TextView
        android:id="@+id/tvTextPreview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10sp"
        android:text="The Text Preview"/>
    <TextView
        android:id="@+id/tvFinalString"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10sp"
        android:text="How did the client respond to this?"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/tab2k3e"
        android:layout_width="wrap_content"
        android:layout_height="70sp"
        android:layout_marginTop="20sp"
        app:tabPaddingStart="80sp"
        app:tabPaddingEnd="80sp"
        app:tabMaxWidth="260sp"
        app:tabMode="fixed"
        app:tabGravity="fill"
        app:tabSelectedTextColor="#000"
        app:tabIndicatorColor="@color/colorAccent"
        app:tabTextColor="#000"
        android:layout_gravity="center"
        android:foregroundGravity="center"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>


    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager2k3e"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#eee"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"  />


</LinearLayout>
