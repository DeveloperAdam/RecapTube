<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="androidlab.com.recaptube.Fragments.MainTabs.EngagementFragment">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10sp"
    android:orientation="horizontal">

        <Button
            android:id="@+id/directedattentionEng"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="directed attention"/>
        <Button
            android:id="@+id/engagedEng"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="engaged" />
        <Button
            android:id="@+id/builtrapportEng"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:text="built rapport"
            android:textAllCaps="false" />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/rolemodeledEng"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:text="role modeled"
            android:textAllCaps="false" />
        <Button
            android:id="@+id/roleplayedEng"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:text="role played"
            android:textAllCaps="false"
         />
        <Button
            android:id="@+id/redirectedEng"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:text="redirected"
            android:textAllCaps="false" />

    </LinearLayout>
</LinearLayout>
