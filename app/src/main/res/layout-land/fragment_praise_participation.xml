<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:orientation="vertical"
    tools:context="androidlab.com.recaptube.Fragments.PraiseTabs.PraiseParticipationFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10sp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/participatinginthesession"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="participating in the session"/>

        <Button
            android:id="@+id/engaginginthesession"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:text="engaging in the session"
            android:textAllCaps="false"
            android:layout_toRightOf="@+id/participatinginthesession"/>



    </LinearLayout>


</LinearLayout>
